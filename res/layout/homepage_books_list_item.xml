<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/homepage_books_card_background" >

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gray_book_group" />

    <ImageView
        android:id="@+id/homepage_edit_img"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/book_title"
        android:src="@drawable/ic_action_overflow" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/book_img"
        android:text="HERE SHOULD APPEAR THE BLOG TEXT"
        android:textColor="#020202"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@id/book_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/book_img"
        android:text="Author" />

</RelativeLayout>