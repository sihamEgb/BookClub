<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="20dip" >

    <EditText
        android:id="@+id/homepage_addingbook_bookname"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Book Title"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/homepage_addingbook_bookauthor"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Book Author"
        android:inputType="text" />

    <TextView
        android:id="@+id/homepage_addingbook_language_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Language" />

    <Spinner
        android:id="@+id/homepage_addingbook_language_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/homepage_addingbook_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location" />

    <AutoCompleteTextView
        android:id="@+id/location_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addNewBook"
        android:text="add book" />

</LinearLayout>